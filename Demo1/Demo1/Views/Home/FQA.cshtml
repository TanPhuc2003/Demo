@{
    ViewData["Title"] = "FQA Page";
    Layout = "~/Views/Shared/_LayoutIndex.cshtml";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="./FQA.css">
    <title>Document</title>
    <style>
        * {
            padding: 0px;
            margin: 0px;
            box-sizing: border-box;
            font-family: system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
            size: 16rem;
        }

        .container {
            width: 100%;
        }

        .container_faq {
            margin-top: 2rem;
            display: flex;
        }

        .header_faq {
            width: 50%;
            height: 25rem;
        }

            .header_faq h2 {
                text-align: center;
                margin-top: 10rem;
            }

        .ct_header {
            text-align: center;
        }

            .ct_header input {
                width: 23rem;
                height: 2rem;
                padding: 1rem;
                outline: none;
                margin-top: 2rem;
            }

            .ct_header button {
                width: 7rem;
                height: 1.5rem;
                cursor: pointer;
                margin-top: 1rem;
                background-color: whitesmoke;
                outline: none;
                border: 1px solid black;
            }

        .img_faq {
            width: 50%;
            margin-top: 2rem;
        }

            .img_faq img {
                height: 25rem;
                width: 37rem;
            }
    </style>
</head>
<body>
    <div class="container">
        <div class="container_faq">
            <div class="header_faq">
                <h2>
                    HOW CAN WE HELP ?
                </h2>
                <div class="ct_header">
                    <input type="text" placeholder="Enter Your Problem">
                    <br>
                    <button>
                        <p>ENTER</p>
                    </button>
                </div>
            </div>
            <div class="img_faq">
                <img src="../img/faq.jpg" alt="">
            </div>
        </div>
    </div>
</body>
</html>